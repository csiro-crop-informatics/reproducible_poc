profiles {
  standard {
    process.executor = 'local'
  }
  modules {
    process.$kangaIndex.module = 'biokanga/4.3.9'
    process.$kangaAlign.module = 'biokanga/4.3.9'
    process.$bamReIndex.module = 'samtools/1.7.0'
  }
  slurm {
    process.executor = 'slurm'
    process.cpus = '8'
    process.memory = '10GB'
  }
  docker {
    process.$kangaAlign.container = 'rsuchecki/biokanga:4.3.9'
    docker.enabled = true
  }
  singularity {
    process.module = 'singularity/2.4.0'
    process.$kangaAlign.container = 'rsuchecki/biokanga:4.3.9'
    singularity.enabled = true
    //Avoid pulling singularity images each time, set cacheDir on shared drive location available to all compute nodes
    singularity.cacheDir = 'singularity-images'
  }
}

//GENERATE REPORT
report.enabled = true

